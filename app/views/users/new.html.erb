<div class="text-xl px-4 py-4">
  <%= simple_form_for :user, :url => new_user_path, html: {class: "px-8 pt-6 pb-8 mb-4"} do |f| %>
    <%= f.input :email,
                input_html: {
                  class: "shadow appearance-none border rounded w-full py-2 px-3 mb-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline max-w-md"
                },
                placeholder: "Email",
                label_html: {class: "hidden"}
    %>
    <%= f.input :password,
                input_html: {
                  class: "shadow appearance-none border rounded w-full py-2 px-3 mb-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline max-w-md"
                },
                placeholder: "Password",
                label_html: {class: "hidden"}
    %>
    <%= f.button :submit,
                 "Coming Soon",
                 disabled: true,
                 class: "bg-gray-500 hover:bg-gray-400 text-white font-bold py-2 px-4 border-b-4 border-gray-700 hover:border-gray-500 rounded mt-2 disabled opacity-25"
    %>
  <% end %>
</div>
